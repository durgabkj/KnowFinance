<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_color" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/blue_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="PersonalDataTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="fontFamily">@font/mo_re</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
    </style>


    <style name="DialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>
</resources>