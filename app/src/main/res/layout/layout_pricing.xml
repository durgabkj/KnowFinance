<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_margin="40dp"
        android:translationZ="20dp"
        android:elevation="20dp"
        android:background="@drawable/white_border_rounded_corner"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/llPricingBg"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@color/appColor"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/mo_re"
                android:text="Free Plan"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/mo_re"
                    android:text="$"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/mo_re"
                    android:text="29"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/mo_re"
                    android:text="/ month"
                    android:textColor="#B9E7EF"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPricingContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableStart="@drawable/circle_blue_fil"
                android:fontFamily="@font/mo_re"
                android:drawablePadding="8dp"
                android:padding="10dp"
                android:text="Connect directly with Matches"
                android:textColor="@color/textcardColor"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:drawableStart="@drawable/circle_blue_fil"
                android:fontFamily="@font/mo_re"
                android:drawablePadding="8dp"
                android:text=" one of India's best known brands ."
                android:textColor="@color/textcardColor"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableStart="@drawable/circle_blue_fil"
                android:fontFamily="@font/mo_re"
                android:drawablePadding="8dp"
                android:padding="10dp"
                android:text=" matchmaking service, has always differe "
                android:textColor="@color/textcardColor"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableStart="@drawable/circle_blue_fil"
                android:fontFamily="@font/mo_re"
                android:drawablePadding="8dp"
                android:padding="10dp"
                android:text=" more that has changed the way partner.
"
                android:textColor="@color/textcardColor"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableStart="@drawable/circle_blue_fil"
                android:fontFamily="@font/mo_re"
                android:padding="10dp"
                android:drawablePadding="8dp"
                android:text="Connect directly with Matches"
                android:textColor="@color/textcardColor"
                android:textStyle="bold" />



            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy Now"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/mo_re"
                android:backgroundTint="@color/appColor"/>
            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>