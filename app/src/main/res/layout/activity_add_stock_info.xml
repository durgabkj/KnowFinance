<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddStockInfoActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/ablLanding"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/appColor"
            tools:ignore="MissingConstraints">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/mtbAddStockFinance"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginStart="5dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
                app:title="Add Stocks"
                app:titleTextColor="@color/white"
                tools:ignore="MissingConstraints" />

        </com.google.android.material.appbar.AppBarLayout>

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:elevation="20dp"
                    android:translationZ="20dp"
                    app:cardBackgroundColor="@color/appColor"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="20dp"
                    app:cardMaxElevation="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:fontFamily="@font/mo_re"
                                android:shadowColor="#000000"
                                android:shadowDx="2"
                                android:shadowDy="2"
                                android:shadowRadius="1.6"
                                android:text="Module"
                                android:textColor="@color/textcardColor"
                                android:textSize="13sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:background="@drawable/white_border_rounded_corner"
                                android:orientation="vertical"
                                tools:ignore="UselessParent">

                                <Spinner
                                    android:id="@+id/spModule"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:focusableInTouchMode="false"
                                    android:fontFamily="@font/mo_re"
                                    android:importantForAutofill="no"
                                    android:maxLines="1"
                                    android:prompt="@string/spinner_header" />
                            </LinearLayout>


                            <TextView
                                android:id="@+id/tvType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1.2"
                                android:fontFamily="@font/mo_re"
                                android:shadowColor="#000000"
                                android:shadowDx="2"
                                android:shadowDy="2"
                                android:shadowRadius="1.6"
                                android:text="Type"
                                android:textColor="@color/textcardColor"
                                android:textSize="13sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:background="@drawable/white_border_rounded_corner"
                                android:orientation="vertical"
                                tools:ignore="UselessParent">

                                <Spinner
                                    android:id="@+id/spType"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:focusableInTouchMode="false"
                                    android:fontFamily="@font/mo_re"
                                    android:importantForAutofill="no"
                                    android:maxLines="1"
                                    tools:ignore="SpeakableTextPresentCheck" />


                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvStock"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1.2"
                                android:fontFamily="@font/mo_re"
                                android:shadowColor="#000000"
                                android:shadowDx="2"
                                android:shadowDy="2"
                                android:shadowRadius="1.6"
                                android:text="Stock name"
                                android:textColor="@color/textcardColor"
                                android:textSize="13sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:background="@drawable/white_border_rounded_corner"
                                android:orientation="vertical"
                                tools:ignore="UselessParent">

                                <Spinner
                                    android:id="@+id/spStock"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:focusableInTouchMode="false"
                                    android:fontFamily="@font/mo_re"
                                    android:importantForAutofill="no"
                                    android:maxLines="1" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1.2"
                                android:fontFamily="@font/mo_re"
                                android:shadowColor="#000000"
                                android:shadowDx="2"
                                android:shadowDy="2"
                                android:shadowRadius="1.6"
                                android:text="Quantity"
                                android:textColor="@color/textcardColor"
                                android:textSize="13sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/white_border_rounded_corner"
                                    android:orientation="vertical"
                                    tools:ignore="UselessParent">

                                    <EditText
                                        android:id="@+id/tvQuantity"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:background="@drawable/bg_edit_text"
                                        android:fontFamily="@font/mo_re"
                                        android:gravity="center_vertical"
                                        android:hint="Quantity"
                                        android:padding="4dp"
                                        android:textColor="@color/black" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/llIcreaseDecrease"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginBottom="4dp"
                                    android:layout_weight=".5"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:visibility="gone">

                                    <TextView
                                        android:id="@+id/decrease"
                                        android:layout_width="40dp"
                                        android:layout_height="30dp"
                                        android:layout_gravity="center_vertical"
                                        android:background="@drawable/white_border_rounded_corner"
                                        android:gravity="center"
                                        android:shadowColor="#000000"
                                        android:shadowRadius="1.6"

                                        android:text="-"
                                        android:textColor="@color/black"
                                        android:textSize="20dp" />


                                    <Space
                                        android:layout_width="10dp"
                                        android:layout_height="wrap_content" />

                                    <TextView
                                        android:id="@+id/increase"
                                        android:layout_width="40dp"
                                        android:layout_height="30dp"
                                        android:layout_gravity="center_vertical"
                                        android:background="@drawable/white_border_rounded_corner"
                                        android:gravity="center"
                                        android:shadowColor="#000000"
                                        android:shadowRadius="1.6"
                                        android:text="+"
                                        android:textColor="@color/black"
                                        android:textSize="20dp" />
                                </LinearLayout>
                            </LinearLayout>


                        </LinearLayout>


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/mbSaveStack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:backgroundTint="@color/white"
                            android:fontFamily="@font/mo_re"
                            android:text="Save"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/appColor" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:overScrollMode="always"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/bg_window"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mo_re"
                            android:gravity="center"
                            android:padding="5dp"
                            android:shadowColor="#000000"
                            android:shadowRadius="1.6"
                            android:text="Sr.No"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <Space
                            android:layout_width="50dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mo_re"
                            android:gravity="center"
                            android:padding="5dp"
                            android:shadowColor="#000000"
                            android:shadowRadius="1.6"
                            android:text="Module"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <Space
                            android:layout_width="55dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/mo_re"
                            android:padding="5dp"
                            android:shadowColor="#000000"
                            android:shadowRadius="1.6"
                            android:text="Type"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <Space
                            android:layout_width="150dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mo_re"
                            android:gravity="center"
                            android:padding="5dp"
                            android:shadowColor="#000000"
                            android:shadowRadius="1.6"
                            android:text="Stock"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <Space
                            android:layout_width="150dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:fontFamily="@font/mo_re"
                            android:gravity="center"
                            android:padding="5dp"
                            android:shadowColor="#000000"

                            android:shadowRadius="1.6"
                            android:text="Quantity"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <Space
                            android:layout_width="50dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mo_re"
                            android:gravity="center"
                            android:padding="5dp"
                            android:shadowColor="#000000"
                            android:shadowRadius="1.6"
                            android:text="Delete"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvStockDetailsTable"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                </LinearLayout>


            </HorizontalScrollView>


        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/llDeleteSelected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
     android:gravity="bottom"
        android:visibility="gone"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tvCount"
            android:layout_width="match_parent"
            android:background="@color/appColor"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/mo_re"
            android:text="Delete Stocks"/>
    </LinearLayout>

</LinearLayout>