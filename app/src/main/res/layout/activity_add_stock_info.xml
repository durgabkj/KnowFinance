<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddStockInfoActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/ablLanding"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/appColor"
            tools:ignore="MissingConstraints">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/mtbAddStockFinance"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:titleTextColor="@color/white"
                app:title="Add Stocks"
                app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
                android:layout_marginStart="5dp"
                tools:ignore="MissingConstraints"/>

        </com.google.android.material.appbar.AppBarLayout>

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_land_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mo_re"
                    android:layout_weight="1.2"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text="Module"
                    android:textColor="@color/textcardColor"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_border"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    tools:ignore="UselessParent">

                    <Spinner
                        android:id="@+id/spModule"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/mo_re"
                        android:importantForAutofill="no"
                        android:maxLines="1" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tvType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mo_re"
                    android:layout_weight="1.2"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text="Type"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/textcardColor"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_border"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    tools:ignore="UselessParent">

                    <Spinner
                        android:id="@+id/spType"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/mo_re"
                        android:importantForAutofill="no"
                        android:maxLines="1"
                        tools:ignore="SpeakableTextPresentCheck" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tvStock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mo_re"
                    android:layout_weight="1.2"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text="Stock"
                    android:textColor="@color/textcardColor"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_border"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    tools:ignore="UselessParent">

                    <Spinner
                        android:id="@+id/spStock"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/mo_re"
                        android:importantForAutofill="no"
                        android:maxLines="1"
                       />
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mo_re"
                    android:layout_weight="1.2"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text="Quantity"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/textcardColor"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_border"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/tvQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:fontFamily="@font/mo_re"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="20dp" />


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/decrease"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:layout_marginEnd="4dp"
                    android:textStyle="bold"
                    android:background="@color/appColor"
                    android:textColor="@color/black"
                    android:text="-" />

                <TextView
                    android:id="@+id/increase"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:background="@color/appColor"
                    android:textColor="@color/black"
                    android:text="+" />
            </LinearLayout>
<com.google.android.material.button.MaterialButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Save"
    android:layout_gravity="center"
    android:textColor="@color/white"
    android:backgroundTint="@color/appColor"
    android:fontFamily="@font/mo_re"
    android:textStyle="bold"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/appColor"/>

        <LinearLayout
            android:id="@+id/llRanking"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/appColor"
            android:padding="8dp">



            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/mo_re"
                android:gravity="center"
                android:padding="5dp"
                android:text="Sr.No"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:fontFamily="@font/mo_re"
                android:gravity="center"
                android:padding="5dp"
                android:text="Module"
                android:textSize="11sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/mo_re"
                android:gravity="center"
                android:padding="5dp"
                android:text="Type"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/mo_re"
                android:gravity="center"
                android:padding="5dp"
                android:text="Stock"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:fontFamily="@font/mo_re"
                android:gravity="center"
                android:padding="5dp"
                android:text="Quantity"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:fontFamily="@font/mo_re"
                android:gravity="center"
                android:padding="5dp"
                android:text="Delete"
                android:textSize="11sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPointTable"
                    android:layout_width="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_height="match_parent"
                    />

        </LinearLayout>

        </LinearLayout>




        </LinearLayout>

    </ScrollView>

</LinearLayout>