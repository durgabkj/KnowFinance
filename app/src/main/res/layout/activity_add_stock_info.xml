<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddStockInfoActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/ablLanding"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/appColor"
            tools:ignore="MissingConstraints">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/mtbAddStockFinance"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:titleTextColor="@color/white"
                app:title="Add Stocks"
                app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
                android:layout_marginStart="5dp"
                tools:ignore="MissingConstraints"/>

        </com.google.android.material.appbar.AppBarLayout>

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="20dp"
                    app:cardCornerRadius="4dp"
                    app:cardMaxElevation="20dp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/appColor"
                    app:cardElevation="20dp"
                    android:translationZ="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
<!--                            <TextView-->
<!--                                android:id="@+id/tv_land_message"-->
<!--                                android:layout_width="wrap_content"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:fontFamily="@font/mo_re"-->
<!--                                android:layout_weight="1.2"-->
<!--                                android:shadowColor="#000000"-->
<!--                                android:shadowDx="2"-->
<!--                                android:shadowDy="2"-->
<!--                                android:shadowRadius="1.6"-->
<!--                                android:text="Module"-->
<!--                                android:textColor="@color/textcardColor"-->
<!--                                android:textSize="13sp" />-->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/white_border_rounded_corner"
                                android:orientation="vertical"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:layout_marginTop="4dp"
                                tools:ignore="UselessParent">

                                <Spinner
                                    android:id="@+id/spModule"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:prompt="@string/spinner_header"
                                    android:focusableInTouchMode="false"
                                    android:fontFamily="@font/mo_re"
                                    android:importantForAutofill="no"
                                    android:maxLines="1" />
                            </LinearLayout>


<!--                            <TextView-->
<!--                                android:id="@+id/tvType"-->
<!--                                android:layout_width="wrap_content"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:fontFamily="@font/mo_re"-->
<!--                                android:layout_weight="1.2"-->
<!--                                android:shadowColor="#000000"-->
<!--                                android:shadowDx="2"-->
<!--                                android:shadowDy="2"-->
<!--                                android:shadowRadius="1.6"-->
<!--                                android:text="Type"-->
<!--                                android:textColor="@color/textcardColor"-->
<!--                                android:textSize="13sp" />-->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/white_border_rounded_corner"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_marginTop="4dp"
                                tools:ignore="UselessParent">

                                <Spinner
                                    android:id="@+id/spType"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:focusableInTouchMode="false"
                                    android:fontFamily="@font/mo_re"
                                    android:importantForAutofill="no"
                                    android:maxLines="1"
                                    tools:ignore="SpeakableTextPresentCheck" />


                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal"
                            >
<!--                            <TextView-->
<!--                                android:id="@+id/tvStock"-->
<!--                                android:layout_width="match_parent"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:fontFamily="@font/mo_re"-->
<!--                                android:layout_weight="1.2"-->
<!--                                android:layout_gravity="center"-->
<!--                                android:shadowColor="#000000"-->
<!--                                android:shadowDx="2"-->
<!--                                android:shadowDy="2"-->
<!--                                android:shadowRadius="1.6"-->
<!--                                android:text="Stock"-->
<!--                                android:textColor="@color/textcardColor"-->
<!--                                android:textSize="13sp" />-->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/white_border_rounded_corner"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:layout_marginTop="4dp"
                                tools:ignore="UselessParent">

                                <Spinner
                                    android:id="@+id/spStock"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:focusableInTouchMode="false"
                                    android:fontFamily="@font/mo_re"
                                    android:importantForAutofill="no"
                                    android:maxLines="1"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/white_border_rounded_corner"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_marginTop="4dp"
                                tools:ignore="UselessParent">

                                <EditText
                                    android:id="@+id/tvQuantity"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:fontFamily="@font/mo_re"
                                    android:hint="Quantity"
                                    android:background="@drawable/bg_edit_text"
                                    android:padding="4dp"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/black"
                                     />


                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/decrease"
                                android:layout_width="30dp"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:layout_marginEnd="4dp"
                                android:textStyle="bold"
                                android:shadowColor="#000000"
                                android:shadowDx="2"
                                android:shadowDy="2"
                                android:shadowRadius="1.6"
                                android:background="@color/white"
                                android:textColor="@color/black"
                                android:text="-" />

                            <TextView
                                android:id="@+id/increase"
                                android:layout_width="30dp"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:shadowColor="#000000"
                                android:shadowDx="2"
                                android:shadowDy="2"
                                android:shadowRadius="1.6"
                                android:background="@color/white"
                                android:textColor="@color/black"
                                android:text="+" />
                        </LinearLayout>
                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Save"
                            android:layout_gravity="center"
                            android:textColor="@color/appColor"
                            android:backgroundTint="@color/white"
                            android:fontFamily="@font/mo_re"
                            android:textStyle="bold"/>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/appColor"/>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:overScrollMode="always"
                android:scrollbars="none"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@color/appColor"
                        android:padding="8dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/mo_re"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Sr.No"
                            android:shadowColor="#000000"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="1.6"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:fontFamily="@font/mo_re"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Module"
                            android:shadowColor="#000000"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="1.6"
                            android:textSize="11sp"
                            android:textStyle="bold" />


                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:fontFamily="@font/mo_re"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Type"
                            android:shadowColor="#000000"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="1.6"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:fontFamily="@font/mo_re"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Stock"
                            android:textSize="11sp"
                            android:shadowColor="#000000"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="1.6"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:fontFamily="@font/mo_re"
                            android:gravity="center"
                            android:padding="5dp"
                            android:shadowColor="#000000"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="1.6"
                            android:text="Quantity"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:fontFamily="@font/mo_re"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Delete"
                            android:textSize="11sp"
                            android:shadowColor="#000000"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="1.6"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvPointTable"
                            android:layout_width="match_parent"
                            android:layout_marginStart="5dp"
                            android:layout_height="match_parent"
                            />

                    </LinearLayout>

                </LinearLayout>




            </HorizontalScrollView>



        </LinearLayout>
    </ScrollView>

</LinearLayout>