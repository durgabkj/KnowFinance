<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".BackTestingActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/appColor"
            tools:ignore="MissingConstraints">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/mtbBackTest"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:titleTextColor="@color/white"
                app:title="BackTest-Margin"
                app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
                android:layout_marginStart="5dp"
                tools:ignore="MissingConstraints"/>

        </com.google.android.material.appbar.AppBarLayout>

        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            app:sliderAnimationDuration="600"
            app:sliderAutoCycleDirection="back_and_forth"
            app:sliderIndicatorAnimationDuration="600"
            app:sliderIndicatorEnabled="true"
            android:layout_margin="4dp"
            app:sliderIndicatorGravity="center_horizontal|bottom"
            app:sliderIndicatorMargin="15dp"
            app:sliderIndicatorOrientation="horizontal"
            app:sliderIndicatorPadding="3dp"
            app:sliderIndicatorRadius="2dp"
            app:sliderIndicatorSelectedColor="#5A5A5A"
            app:sliderIndicatorUnselectedColor="#FFF"
            app:sliderScrollTimeInSec="1" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_land_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mo_re"
                android:layout_weight="1.2"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:text=" Select Module"
                android:textColor="@color/textcardColor"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_border"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                tools:ignore="UselessParent">

                <Spinner
                    android:id="@+id/spModule"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/mo_re"
                    android:importantForAutofill="no"
                    android:maxLines="1" />
            </LinearLayout>


            <TextView
                android:id="@+id/tvType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mo_re"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="Select Stock Name"
                android:textColor="@color/textcardColor"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_border"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                tools:ignore="UselessParent">

                <Spinner
                    android:id="@+id/spType"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/mo_re"
                    android:importantForAutofill="no"
                    android:maxLines="1"
                    tools:ignore="SpeakableTextPresentCheck" />


            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@color/textcardColor"
                android:fontFamily="@font/mo_re"
                android:text="Select Date From" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:background="@drawable/blue_border"
                    tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/etFromAgePartnerPreference"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:editable="false"
                        android:fontFamily="@font/mo_re"
                        android:enabled="true"
                        android:hint="mm/dd/yyyy"
                        android:gravity="center_vertical"
                        android:textSize="12dp"
                        android:layout_marginStart="8dp"
                        tools:ignore="Deprecated" />

                </LinearLayout>




                <TextView
                    android:layout_width="wrap_content"
                    android:text="To"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:padding="2dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>

                <!-- Drop down number 2-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:background="@drawable/blue_border"
                    tools:ignore="UselessParent">


                    <TextView
                        android:id="@+id/etToAgePartnerPreference"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:editable="false"
                        android:fontFamily="@font/mo_re"
                        android:hint="mm/dd/yyyy"
                        android:gravity="center_vertical"
                        android:textSize="12dp"
                        android:layout_marginStart="8dp"
                        tools:ignore="Deprecated" />


                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Search Data"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:backgroundTint="@color/appColor"
                android:fontFamily="@font/mo_re"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>