<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">



            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:scrollbars="none">


                <LinearLayout
                    android:id="@+id/llAddStockList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvStockList"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="3dp"
                        android:clickable="true"
                        android:elevation="10dp"
                        android:focusable="true"
                        android:translationZ="4dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="3dp"
                        app:cardElevation="8dp"
                        app:cardMaxElevation="10dp"
                        app:contentPadding="5dp"
                        app:rippleColor="@color/appColor"

                        >

                        <LinearLayout
                            android:id="@+id/llDataShow"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white">

                            <TextView
                                android:id="@+id/tvSno"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:fontFamily="serif"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:text="1."
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tvModule"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:ellipsize="end"
                                android:fontFamily="serif"
                                android:gravity="center"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:text="Heikin Ashi"
                                android:textAlignment="center"
                                android:textColor="@color/black" />


                            <TextView
                                android:id="@+id/tvType"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:fontFamily="serif"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:text="Future"
                                android:textAlignment="center"
                                android:textColor="@color/black" />


                            <TextView
                                android:id="@+id/tvStock"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="200"
                                android:ellipsize="end"
                                android:fontFamily="serif"
                                android:gravity="center"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:text="HDFC LIFE INSURENCE COMPANY LIMITED"
                                android:textColor="@color/black" />


                            <TextView
                                android:id="@+id/tvQuantity"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:ellipsize="end"
                                android:fontFamily="serif"

                                android:padding="5dp"
                                android:singleLine="true"
                                android:text="1100"
                                android:textColor="@color/black" />

                            <ImageView
                                android:id="@+id/tvDelete"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/dustbin" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray" />




</LinearLayout>